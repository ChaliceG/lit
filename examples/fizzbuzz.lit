val index: 0
val limit: 10
val innerWhiles: true

while (index < limit) {{
  val innerWhiles: true
  while (index % 3 = 0 && innerWhiles) {{
    print "BUZZ"
    val innerWhiles: false
  }}

  while ((index % 3 = 1
    || index % 3 = 2) && innerWhiles) {{
    print "FIZ"
    val innerWhiles: false
  }}
  val index: index + 1
}}
